@model Answer

@{
    ViewData["Title"] = "AddAnswer";
}

<h4>Add Answer</h4>
<hr />
<div class="row">
    <div class="col-12">
        <form asp-action="AddAnswer">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="QuestionId" hidden name="QuestionId"/>
            <div class="form-group">
                <label asp-for="Question.Title" class="control-label"></label>
                 <input asp-for="Question.Title" readonly class="form-control" />
            </div>
        
            <div class="form-group">
                <label asp-for="Body" class="control-label"></label>
                <input type="hidden" asp-for="Body" />
                <input type="text" id="Body1" />
                <span asp-validation-for="Body" class="text-danger"></span>
            </div>  
            <div class="form-group">
                   <input type="button" onclick="submitForm();" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="AnswerList">Back to List</a>
</div>